/* pages/peoson/person.wxss */
.userinfo{
    width: 100%;
    height: 30vh;
    background-color: rebeccapurple;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.userinfo-nickname {
    color: #333;
  }
  .weui_cell{
      position: relative;
      display: flex;
      padding: 15rpx;
      -webkit-box-align: center;
      -ms-flex-align: center;
      align-items: center;
      border-bottom: 1px solid #dadada;
  }
  .weui_cell_hd{
    display: inline-block;
    width: 20rpx;
    margin-right: 5rpx;
  }
  .weui_cell_hd image{
    width: 100%;
    height: 20rpx;
    vertical-align: -2px;
  }
  .weui_cell_bd{
    display: inline-block;
  }
  .weui_cell_bd_p{
    font-size: 14rpx;
    color: #939393;
  }
  .badge{
    position: absolute;
    top: 30rpx;
    right: 20rpx;
    width: 30rpx;
    height: 30rpx;
    background: #ff0000;
    color: #fff;
    border-radius: 50%;
    text-align: center;
    font-size: 20rpx;
  }
.userinfo-avatar{
    background-size: cover;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}